<% if @yarn.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@yarn.errors.count, "error") %>
      prohibited this project from being saved:
    </h2>
    <ul>
    <% @yarn.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @yarn do |f| %>
<fieldset>
  <legend>Yarn:</legend>
  <%= f.label "Color:" %>
  <%= f.text_field :color %><br>

  <%= f.label "Full skeins:" %>
  <%= f.number_field :count %><br>

  <%= f.label "Scrap (oz):" %>
  <%= f.text_field :scrap %><br>

  <%= f.label "Select Brand:" %>
  <%= f.collection_select :brand_id, current_user.brands, :id, :name, {:prompt => "New Brand"} %><br>

  <%= f.label "Select Project:" %>
  <%= f.collection_select :project_id, current_user.projects, :id, :name, {:prompt => "New Project"} %><br>
</fieldset>

<% if @brand %>
<fieldset>
  <legend>Create a Brand::</legend>
    <%= f.fields_for :brand do |b| %>

      <%= b.label "Name:" %>
      <%= b.text_field :name %><br>

      <%= b.label "Select Material:" %>
      <%= b.select :material, material_choices %><br>

      <%= b.label "Select Gauge:" %>
      <%= b.select :weight, weight_choices, :selected => '4 - Medium' %><br>

      <%= b.label "Skein weight (oz):" %>
      <%= b.number_field :skein_weight %><br>

      <%= b.label "Skein length (yd):" %>
      <%= b.number_field :skein_length %><br>

      <%= b.label "Recommended crochet hook:" %>
      <%= b.text_field :hook %><br>

      <%= b.label "Recommended knitting needle:" %>
      <%= b.text_field :needle %><br>

    <% end %>
</fieldset>
<% end %>

<% if @project %>
<fieldset>
  <legend>Create a Project::</legend>
    <%= f.fields_for :project do |p| %>
      <%= p.hidden_field :user_id, value: current_user.id %>

      <%= p.label "Name:" %>
      <%= p.text_field :name %><br>

      <%= p.label "Status:"%>
      <%= p.select :status, status_choices %><br>

      <%= p.label "Pattern:" %>
      <%= p.text_field :pattern_info %><br>

    <% end %>
  <% end %>
</fieldset>

  <%= f.submit %>
<% end %>
