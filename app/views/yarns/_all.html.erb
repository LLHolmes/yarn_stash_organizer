<div class="inside">
  <h1>Yarn</h1>

  <% weight_choices.each do |gauge| %>
    <% if !current_user.brand_by_weight(gauge).empty? %>
      <div class="weight">
        <h2><%= gauge %></h2>
        <div>
        <% current_user.brand_by_weight(gauge).each do |brand| %>
          <h3><%= link_to brand.name, brand_path(brand) %> (<%= brand.material %>):</h3>
            <div class="each-brand">
              <% brand.yarns_by_color.each do |yarn| %>
                <div class="each-yarn">
                  <%= link_to yarn.color, edit_yarn_path(yarn) %> <span class="yarn-details"><%= yarn_amount yarn %> <%= list_project yarn %></span>
                </div>
              <% end %>
            </div>
        <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
