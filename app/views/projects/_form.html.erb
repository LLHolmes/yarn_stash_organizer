<% if @project.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@project.errors.count, "error") %>
      prohibited this project from being saved:
    </h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @project do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.select :status, status_choices, :prompt => 'Select Status' %><br>

  <%= f.label "Pattern:" %>
  <%= f.text_field :pattern_info %><br>

  <% @project.notes.each do |comment| %>
    <div>
    <% if comment.note %>
      <p><%= comment.created_at.strftime("%m/%d/%Y, %l:%M %p") %>: <%= comment.note %></p>
        <%= button_to "Delete Note", { action: "destroy", id: comment.id }, method: :delete, data: { confirm: "Are you sure?" } %>
    <% else %>
      <%= f.fields_for :notes do |n| %>
        <%= n.label "Add note:" %><br>
        <%= n.text_area :note %><br>
      <% end %>
    <% end %>
    </div>
  <% end %>

  <%= f.label "Select Yarn:" %><br>
  <%= f.collection_check_boxes(:yarn_ids, current_user.yarns_sorted_by_brand, :id, :yarn_with_brand) %><br>

  <%= f.label "Select Tools:" %><br>
  <%= f.collection_check_boxes(:tool_ids, current_user.tools, :id, :name) %>

  <%= f.submit %>
<% end %>
