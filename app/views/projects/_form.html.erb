<%= form_for @project do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.select :status, status_choices, :prompt => 'Select Status' %><br>

  <%= f.label "Pattern:" %>
  <%= f.number_field :pattern %><br>

  <%= f.fields_for :notes do |n| %>
    <%= n.label "Note:" %>
    <%= n.text_area :note %><br>
  <% end %>

  <%= f.submit %>
<% end %>
