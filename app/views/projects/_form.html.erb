<%= form_for @project do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.select :status, status_choices, :prompt => 'Select Status' %><br>

  <%= f.label "Pattern:" %>
  <%= f.text_field :pattern_info %><br>

  <%= f.fields_for :notes do |n| %>
    <%= n.label "Add note:" %><br>
    <%= n.text_area :note %><br>
  <% end %>

  <%= f.label "Select Yarn:" %><br>
  <%= f.collection_check_boxes(:yarns, current_user.yarns_sorted_by_brand, :id, :yarn_with_brand) %><br>

  <%= f.label "Select Tools:" %><br>
  <%= f.collection_check_boxes(:tools, current_user.tools, :id, :name) %>

  <%= f.submit %>
<% end %>
