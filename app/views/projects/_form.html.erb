<% if @project.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@project.errors.count, "error") %>
      prohibited this project from being saved:
    </h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @project do |f| %>
<fieldset>
  <legend>Project:</legend>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.select :status, status_choices, :prompt => 'Select Status' %><br>

  <%= f.label "Pattern:" %>
  <%= f.text_field :pattern_info %><br>

  <%= f.fields_for :notes do |n| %>
    <% if @project.notes.first.note && n.object.note %>
        <p><em><%= n.object.created_at.localtime.strftime("%m/%d/%Y, %l:%M %p") %></em></p>
        <p><%= n.object.note %></p>
    <% else  %>
      <%= n.label "Note:" %><br>
      <%= n.text_area :note %><br>
    <% end %>
  <% end %>
</fieldset>

<fieldset>
  <legend>Select Yarn:</legend>
  <%= f.collection_check_boxes(:yarn_ids, current_user.yarns_sorted_by_brand, :id, :yarn_with_brand) %><br>
</fieldset>

<fieldset>
  <legend>Select Tools:</legend>
  <%= f.collection_check_boxes(:tool_ids, current_user.tools, :id, :name) %>
</fieldset>

  <%= f.submit %>
<% end %>
